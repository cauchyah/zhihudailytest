<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1284dc"
    android:orientation="vertical">

    <com.zhihudailytest.CustomUI.LogoView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:padding="20dp"
        app:radius="20dp"
        app:ring_width="5dp"
        app:text_color="@color/white"
        app:text_size="28sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/authLogin"
        android:textColor="#afe1f2"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/sinaLogin"
        style="@style/imageview_with_textview"
        android:background="@drawable/button_selector">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/umeng_socialize_sina_on" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="?android:textColorPrimary"
            android:text="@string/sinaLogin"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qqLogin"
        style="@style/imageview_with_textview"
        android:background="@drawable/button_selector"
        android:clickable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/umeng_socialize_qq_on" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="?android:textColorPrimary"
            android:text="@string/qqLogin"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="@string/protocolMsg"
        android:textColor="#afe1f2" />
</LinearLayout>
